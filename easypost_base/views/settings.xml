<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="odna_stock_settings_view" model="ir.ui.view">
        <field name="name">odna_stock_settings_view</field>
        <field name="model">stock.config.settings</field>
        <field name="inherit_id" ref="stock.view_stock_config_settings"/>
        <field name="arch" type="xml">  
            <group name="shipping" position="inside">
                <field name="easypost_key" password="True"/>
                <field name="easypost_label_format"/>
                <field name="easypost_carrier_ids" widget="many2many_tags"/>
                <field name="shipping_responsible_id"/>
                <field name="company_id" invisible="1"/>
            </group>
        </field>
    </record>

</odoo>